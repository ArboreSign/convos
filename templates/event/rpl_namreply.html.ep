<li class="nicks" data-cid="<%= $cid %>" data-target="<%= $target %>">
  <span class="prefix">Participants are</span>
  <span>
    % my $i = 0;
    % for my $n (@$nicks) {
      <%= link_to join('', @$n{qw/mode nick/}), view => { cid => $cid, target => $n->{nick} }, 'data-nick' => $n->{nick} %><%= ++$i == @$nicks ? '.' : ', ' %>
    % }
  </span>
  %= timestamp_span($timestamp)
</li>
