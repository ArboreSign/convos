<li class="nicks" data-target="<%= as_id $cid, $target %>">
  <span class="prefix">Participants are</span>
  <span>
    % my $i = 0;
    % for my $n (@$nicks) {
      <%= link_to join('', @$n{qw/mode nick/}), 'channel.view', target => $n->{nick}, 'data-nick' => $n->{nick} %><%= ++$i == @$nicks ? '.' : ', ' %>
    % }
  </span>
  <span class="timestamp" title="<%= format_time $timestamp, '%d. %n' %>"><%= format_time $timestamp, '%H:%M:%S' %></span>
</li>
