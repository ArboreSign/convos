<li class="nick-change" data-cid="<%= $cid %>" data-target="any">
  <span class="prefix"><%= app->config->{name} %>:</span>
  <span><b class="old"><%= $old_nick %></b> changed nick to "<%= link_to $new_nick, 'channel.view', { cid => $cid, target => $new_nick }, class => 'nick-link' %>"</span>
  %= timestamp_span($timestamp)
</li>
