<li class="whois" data-cid="<%= $cid %>" data-target="any">
  <span class="prefix"><%= app->config->{name} %>:</span>
  <span>
    %= link_to $nick, 'channel.view', { cid => $cid, target => $nick }
    is in
    % my $i = 0;
    % for my $channel (@$channels) {
      % my $target = $channel; $target =~ s/^.\#/#/;
      <%= link_to $channel, 'channel.view', { cid => $cid, target => $target } %><%= ++$i == @$channels ? '.' : ', ' %>
    % }
  </span>
</li>
