<li class="whois" data-host="<%= $host %>" data-target="any">
  <div class="content">
    %= link_to $nick, view => { host => $host, target => $nick }
    is in
    % my $i = 0;
    % for my $channel (@$channels) {
      % my $target = $channel; $target =~ s/^.\#/#/;
      <%= link_to $channel, view => { host => $host, target => $target } %><%= ++$i == @$channels ? '.' : ', ' %>
    % }
  </div>
</li>
