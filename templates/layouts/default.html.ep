<!DOCTYPE html>
<html>
  <head><title><%= join ' - ', app->config->{name}, title %></title>
    %= stylesheet '/css/wirc.css';
    %= stylesheet '/css/jquery.terminal.css';
    %= javascript '/js/jquery.js';
    %= javascript '/js/ws-reconnecting.js';
    %= javascript '/js/template.js';
    %= javascript '/js/structure.min.js';
    %= javascript '/js/date-format.js';
    %= javascript '/js/jquery.terminal-min.js';
    %= javascript '/js/wirc.js';
  </head>
  <body>
  <div id="container">
    <div id="navbar" class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span class="brand"><%= link_to app->config->{name}, 'index' %></span>
          <div class="nav-collapse collapse">
            <ul class="nav main-menu pull-right">
            % if(session 'uid') {
              <li><%= link_to 'Chat', 'index' %></li>
              <li><%= link_to 'Settings', 'settings' %></li>
              <li><%= link_to 'Logout', 'logout' %></li>
            % } else {
              <li><%= link_to 'Login', 'login' %></li>
              <li><%= link_to 'Register', 'register' %></li>
            % }
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      %= content
    </div>
  </div>
  </body>
</html>
