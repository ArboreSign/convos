<!DOCTYPE html>
<html>
  <head><title><%= join ' - ', app->config->{name}, title %></title>
    %= stylesheet '/css/wirc.css';
    %= stylesheet '/show-hide.css';
    %= javascript '/js/jquery.js';
    %= javascript '/bootstrap/js/bootstrap-dropdown.js';
    %= javascript '/bootstrap/js/bootstrap-typeahead.js';
    %= javascript '/js/template.js';
    %= javascript '/js/structure.min.js';
    %= javascript '/js/date-format.js';
    %= javascript '/js/wirc.js';
  </head>
  <body>
  <div id="container">
    <div id="navbar" class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span class="brand"><%= app->config->{name} %></span>
          <div class="nav-collapse collapse">
            <ul class="nav main-menu pull-right">
              <li class="visible-if-user"><%= link_to 'Chat', 'chat' %></li>
              <li class="visible-if-user"><%= link_to 'Archive', 'archive' %></li>
              <li class="visible-if-user"><%= link_to 'Settings', 'settings' %></li>
              <li class="visible-if-user"><%= link_to 'Logout', 'logout' %></li>
              <li class="visible-no-user"><%= link_to 'Login', 'login' %></li>
              <li class="visible-no-user"><%= link_to 'Register', 'register' %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      %= content
    </div>
  </div>
  </body>
</html>
