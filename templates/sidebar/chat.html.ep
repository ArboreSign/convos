<li>
  <h3>Actions</h3>
</li>
<li>
  <button class="link ws-cmd" name="cmd" value="/topic">Get topic</button>
</li>
<li>
  <button class="link ws-cmd" name="cmd" value="/close <%= $target %>">Close chat</button>
</li>
<li>
  <button class="link ws-cmd" name="cmd" value="/help">Help</button>
</li>
<li>
  <h3>Participants</h3>
</li>
<li class="nick">
% if ($target =~ /^[#&]/) {
  <div class="form-group">Loading...</div>
% } else {
  <div class="form-group"><%= $target %></div>
% }
</li>
